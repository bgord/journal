{
  "compilerOptions": {
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["ESNext", "DOM"],
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "+infra": ["./infra/index"],
      "+infra/*": ["./infra/*"],
      "+emotions": ["./modules/emotions/index"],
      "+emotions/*": ["./modules/emotions/*"],
      "+auth": ["./modules/auth/index"],
      "+auth/*": ["./modules/auth/*"],
      "+publishing": ["./modules/publishing/index"],
      "+publishing/*": ["./modules/publishing/*"],
      "+ai": ["./modules/ai/index"],
      "+ai/*": ["./modules/ai/*"],
      "+app": ["./app/index"],
      "+app/*": ["./app/*"],
      "+languages": ["./modules/supported-languages.ts"],
      "+system": ["./modules/system/index"],
      "+system/*": ["./modules/system/*"],
      "+preferences": ["./modules/preferences/index"],
      "+preferences/*": ["./modules/preferences/*"],
      "react": ["./node_modules/preact/compat"],
      "react-dom": ["./node_modules/preact/compat"],
      "react/jsx-runtime": ["./node_modules/preact/jsx-runtime"],
      "react/jsx-dev-runtime": ["./node_modules/preact/jsx-runtime"]
    }
  },
  "types": ["preact/compat"],
  "exclude": ["bgord-scripts", "frontend"]
}
